---
import Button from "@components/Button.astro"
import TypographyLink from "@components/TypographyLink/TypographyLink.astro"
import BaseLayout from "src/layouts/BaseLayout.astro"
---

<BaseLayout
  pageTitle="Kontakt"
  description="Kontakt do weterynarza od gadów, gryzoni, psów i kotów"
>
  <script
    async
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDQmgFq4rIPlpeGw40toAQn3z_GHazvrxk&MAP_ID&callback=console.debug&libraries=maps,marker&v=beta"
  ></script>
  <div
    class:list={[
      "w-full flex flex-grid gap-2 justify-between md:flex-row",
      "max-md:flex-col "
    ]}
  >
    <div class="flex flex-1">
      <address>
        <div class="mb-2 not-italic">
          <h3>📧 Email</h3>
          <TypographyLink href="mailto:weteryarznadyzurze@gmail.com">
            weteryarznadyzurze@gmail.com
          </TypographyLink>
        </div>
        <div class="mb-2 not-italic">
          <h3>☎ Telefon</h3>
          <TypographyLink href="tel:+48 515 000 502">
            +48 515 000 502
          </TypographyLink>
        </div>
        <address class="mb-2 not-italic">
          <h3>Lub w gabinecie, w którym pracuję 👩‍⚕️</h3>
          <p>
            Eden<br />
            Bielska 19<br />
            Opole, Polska
          </p>
        </address>
      </address>
    </div>
    <div class="flex flex-1">
      <form class="min-w-full" method="post">
        <div class="flex flex-col mb-1">
          <label for="name" htmlFor="name">Your Name</label>
          <input
            class="px-1 text-black"
            type="text"
            id="name"
            name="name"
            placeholder="Rex"
            autocomplete="username"
            required
          />
        </div>
        <div class="flex flex-col mb-1">
          <label for="email" htmlFor="email">Your Email</label>
          <input
            class="px-1 text-black"
            type="email"
            id="email"
            name="email"
            placeholder="example@email.com"
            autocomplete="email"
            required
          />
        </div>
        <div class="flex flex-col mb-1">
          <label for="topic" htmlFor="topic">Temat</label>
          <input
            class="px-1 text-black"
            type="text"
            id="topic"
            name="topic"
            placeholder="Współpraca"
            autocomplete="on"
            required
          />
        </div>
        <div class="flex flex-col mb-2">
          <label for="message" htmlFor="message">Wiadomość</label>
          <textarea
            class="px-1 text-black"
            id="message"
            name="message"
            rows="4"
            autocomplete="on"
            required></textarea>
        </div>
        <Button type="submit">Wyślij</Button>
      </form>
    </div>
  </div>
  <div class="w-full rounded flex flex-1 mt-4 min-h-[30rem]">
    <iframe
      src="https://storage.googleapis.com/maps-solutions-ie6dq62kee/locator-plus/bs3e/locator-plus.html"
      width="100%"
      height="100%"
      style="border:0;"
      loading="lazy"
      class="max-md:min-h-[35rem]"
    >
  </div>
  </iframe>
</BaseLayout>
