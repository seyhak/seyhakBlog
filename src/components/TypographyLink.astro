---
type Props = {
  href: string
  light?: boolean
}
const {href, light} = Astro.props
---
<a href={href} class:list={[light ? ["transition ease-in-out text-blue-100 delay-150 hover:text-white"] : "transition ease-in-out duration-300 delay-150 hover:text-indigo-700 dark:hover:text-white", "dark:text-blue-100"]}>
  <slot/>
</a>