---
import { Image } from "astro:assets";

type Props = {
  title: string;
  imgSrc: any;
  imgAlt: string;
  className?: string;
};
const { title, imgAlt, imgSrc, className } = Astro.props;
---

<div class:list={["flex justify-center items-center my-2", className]}>
  <h2>{title}</h2>
  <Image src={imgSrc} alt={imgAlt} class="mx-3"/>
</div>
